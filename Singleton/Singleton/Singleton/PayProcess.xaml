<Window x:Class="Singleton.PayProcess"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Singleton"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="PayProcess" Height="200" Width="250">
    <Grid>
        <TextBlock Text="A" Style="{StaticResource TitleText}" HorizontalAlignment="Left" Margin="25 0 0 20" VerticalAlignment="Bottom"/>
        <StackPanel Orientation="Horizontal">
            <Ellipse Name="circle_1" Style="{StaticResource dot}"/>
            <Ellipse Name="circle_2" Style="{StaticResource dot}"/>
            <Ellipse Name="circle_3" Style="{StaticResource dot}"/>
        </StackPanel>
        <TextBlock Text="B" Style="{StaticResource TitleText}" HorizontalAlignment="Right" Margin="0 0 25 20" VerticalAlignment="Bottom"/>
        
    </Grid>
</Window>
